@model MetricSystem.Models.TemperatureModel

@{
    ViewData["Title"] = "Fahrenheit to Celsius Converter";
}

<h1>Fahrenheit to Celsius Converter</h1>

<form asp-action="Index" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label asp-for="Fahrenheit">Fahrenheit:</label>
        <input asp-for="Fahrenheit" />
        <span asp-validation-for="Fahrenheit" class="text-danger"></span>
    </div>

    <div>
        <label>Celsius:</label>
        <input readonly value="@(ViewBag.Celsius != null ? ((double)ViewBag.Celsius).ToString("F2") : "")" />
    </div>

    <button type="submit">Convert</button>
    <a asp-action="Index">Clear</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

