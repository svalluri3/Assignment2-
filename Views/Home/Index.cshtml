@model MetricSystem.Models.TemperatureConversionModel

@{
    ViewData["Title"] = "Convert Fahrenheit to Celsius";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="post" novalidate>
    <div class="form-group">
        <label asp-for="FahrenheitValue"></label>
        <input asp-for="FahrenheitValue" class="form-control" />
        <span asp-validation-for="FahrenheitValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CelsiusValue"></label>
        <input class="form-control" readonly value="@(Model.CelsiusValue.HasValue ? Model.CelsiusValue.Value.ToString("F2") : "")" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" name="submitButton" value="Convert" class="btn btn-primary">Convert</button>
        <button type="submit" name="submitButton" value="Clear" class="btn btn-secondary">Clear</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
